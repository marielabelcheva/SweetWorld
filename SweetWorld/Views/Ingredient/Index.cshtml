@model IEnumerable<IngredientViewModel>

@{
    Pager pager = new Pager();
    if (ViewBag.Pager != null) { pager = ViewBag.Pager; }
}

<body>
    <div class="ps-page">
        <div class="ps-hero bg--cover" data-background="img/hero/shop-hero.png">
            <div class="ps-hero__container">
                <div class="ps-breadcrumb">
                    <ul class="breadcrumb">
                        <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li>Ingredients</li>
                    </ul>
                </div>
                <h1 class="ps-hero__heading">Ingredients</h1>
            </div>
        </div>
        <div class="container">
            <div class="ps-whishlist">
                <div class="table-responsive">
                    <table class="table ps-table ps-table--whishlist">
                        <thead>
                            <tr>
                                <th>Ingredient Name</th>
                                <th class="ps-table__actions">
                                    <a asp-action="Add" asp-controller="Ingredient" class="ps-btn">Add new ingredient</a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ingredient in this.Model)
                            {
                                <tr>
                                    <td><span class="ps-instock">@ingredient.Name</span></td>
                                    <td class="ps-table__actions">
                                        <a class="ps-btn--close" asp-action="Delete" asp-controller="Ingredient" asp-route-id="@ingredient.Id"></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <partial name="_Pager" model="@pager" />
            </div>
        </div>
    </div>
</body>