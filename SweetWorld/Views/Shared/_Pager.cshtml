@model Pager

<div class="ps-pagination">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination">

            @if (Model.CurrentPage > 1)
            {
                <li>
                    <a class="fa fa-caret-left" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@(Model.CurrentPage - 1)"></a>
                </li>
            }

            @for (int pg = Model.StartPage; pg <= Model.EndPage; pg++)
            {
                <li class="@(pg == Model.CurrentPage ? "active" : "")">
                    <a asp-controller="@Model.Controller" asp-action="Index" asp-route-page="@pg"> @pg </a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li>
                    <a class="fa fa-caret-right" asp-controller="@Model.Controller" asp-action="@Model.Action" asp-route-page="@(Model.CurrentPage + 1)"></a>
                </li>
            }
        </ul>
    }
</div>
