@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="ps-page--contact">
    <div class="ps-hero bg--cover" data-background="img/hero/shop-hero.png">
        <div class="ps-hero__container">
            <div class="ps-breadcrumb">
                <ul class="breadcrumb">
                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li>Register</li>
                </ul>
            </div>
            <h1 class="ps-hero__heading">@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="ps-section ps-contact">
        <div class="container">
            <div class="row">
                <div class="col-md-4 offset-md-4">
                    <form id="registerForm" method="post" class="ps-form--checkout">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="text-center form-group">
                            <label asp-for="@Model.FirstName">First name</label>
                            <input asp-for="@Model.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                        </div>
                        <div class="text-center form-group">
                            <label asp-for="@Model.LastName">Last name</label>
                            <input asp-for="@Model.LastName" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                        </div>
                        <div class="text-center form-group">
                            <label asp-for="@Model.UserName">Username</label>
                            <input asp-for="@Model.UserName" class="form-control" autocomplete="username" aria-required="true" type="text"/>
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>
                        <div class="text-center form-group">
                            <label asp-for="@Model.PhoneNumber">Phone number</label>
                            <input asp-for="@Model.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" type="tel"/>
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="text-center form-group">
                            <label asp-for="@Model.Email">Email</label>
                            <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" type="email"/>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="text-center form-group">
                            <label asp-for="@Model.Password">Password</label>
                            <input asp-for="@Model.Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                        <div class="text-center form-group">
                            <label asp-for="@Model.ConfirmPassword">Confirm Password</label>
                            <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" />
                            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="text-center form-group">
                            <label asp-for="@Model.IsConfectioner">Are you confectioner?</label>
                            <input asp-for="@Model.IsConfectioner" class="form-control" aria-required="true" placeholder="true or false"/>
                            <span asp-validation-for="@Model.IsConfectioner" class="text-danger"></span>
                        </div>
                        <div class="text-center"><button id="registerSubmit" type="submit" class="ps-btn">Register</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
