@model IEnumerable<UserViewModel>

<div class="ps-hero ps-hero--shopping bg--cover" data-background="img/hero/shop-hero.png">
    <div class="ps-hero__container">
        <div class="ps-breadcrumb">
            <ul class="breadcrumb">
                <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                <li>Products</li>
            </ul>
        </div>
        <h1 class="ps-hero__heading">Products</h1>
    </div>
</div>
<div class="ps-page--shop">
    <div class="container">
        <div class="ps-shopping ps-shopping--no-sidebar">
            <div class="ps-product-box">
                <div class="row">
                    @foreach (var user in this.Model)
                    {
                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-6 col-6 ">
                            <div class="ps-product">
                                <div class="ps-product__content">
                                    <div class="ps-product__desc">
                                        <a class="ps-product__title">@user.FirstName @user.LastName</a>
                                        <p><span>Email: @user.Email</span></p>
                                        <p><span>Role: @user.Role</span></p>
                                    </div>
                                    <div class="ps-product__shopping">
                                        <a class="ps-btn ps-product__add-to-cart" asp-action="Delete" asp-controller="Account" asp-route-id="@user.Id">
                                            Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="ps-pagination">
                <ul class="pagination">
                    <li><a href="#"><i class="fa fa-caret-left"></i></a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#"><i class="fa fa-caret-right"></i></a></li>
                </ul>
            </div>
        </div>
    </div>
</div>