@model EditProductViewModel

<body>
    <div class="ps-page--contact">
        <div class="ps-hero ps-hero--shopping bg--cover" data-background="img/hero/shop-hero.png">
            <div class="ps-hero__container">
                <div class="ps-breadcrumb">
                    <ul class="breadcrumb">
                        <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li>Edit product data</li>
                    </ul>
                </div>
                <h1 class="ps-hero__heading">Edit product data</h1>
            </div>
        </div>
        <div class="ps-section ps-contact">
            <div class="container">
                <div class="ps-section__header">
                    <h3>Data format</h3>
                </div>
                <div class="ps-section__content">
                    <div class="row">
                        @if(!this.Model.Name.ToLower().Contains(" cake"))
                        {
                            <div class="col-xl-4 col-lg-8 col-md-8 col-sm-12 col-12 ">
                                <figure>
                                    <figcaption>Name</figcaption>
                                    <p> Starts with capital letter</p>
                                </figure>
                            </div>
                            <div class="col-xl-4 col-lg-8 col-md-8 col-sm-12 col-12 ">
                                <figure>
                                    <figcaption>Price</figcaption>
                                    <p> When product is not cake</p>
                                </figure>
                            </div>
                            <div class="col-xl-4 col-lg-8 col-md-8 col-sm-12 col-12 ">
                                <figure>
                                    <figcaption>Thumbnail</figcaption>
                                    <p> An URL which must end in .jpg or .png or .jpeg</p>
                                </figure>
                            </div>
                        }
                        else
                        {
                            <div class="col-xl-6 col-lg-8 col-md-8 col-sm-12 col-12 ">
                                <figure>
                                    <figcaption>Name</figcaption>
                                    <p> Starts with capital letter</p>
                                </figure>
                            </div>
                            <div class="col-xl-6 col-lg-8 col-md-8 col-sm-12 col-12 ">
                                <figure>
                                    <figcaption>Thumbnail</figcaption>
                                    <p> An URL which must end in .jpg or .png or .jpeg</p>
                                </figure>
                            </div>
                        }
                    </div>
                </div>
                <form class="ps-form--contact" asp-action="Edit" method="post">
                    <div class="ps-form__content">
                        <div class="row">
                            @if (!this.Model.Name.ToLower().Contains(" cake"))
                            {
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 ">
                                    <div class="form-group">
                                        <figure>
                                            <figcaption>Name</figcaption>
                                        </figure>
                                        <input class="form-control" type="text" asp-for="Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 ">
                                    <div class="form-group">
                                        <figure>
                                            <figcaption>Price</figcaption>
                                        </figure>
                                        <input class="form-control" type="text" asp-for="Price">
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12 "></div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 ">
                                    <div class="form-group">
                                        <figure>
                                            <figcaption>Name</figcaption>
                                        </figure>
                                        <input class="form-control" type="text" asp-for="Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12 "></div>
                            }
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                                <div class="form-group">
                                    <figure>
                                        <figcaption>Thumbnail</figcaption>
                                    </figure>
                                    <input class="form-control" type="url" placeholder="Product Thumbnail URL" asp-for="Thumbnail">
                                    <span asp-validation-for="Thumbnail" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="ps-form__submit">
                            <button class="ps-btn">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>