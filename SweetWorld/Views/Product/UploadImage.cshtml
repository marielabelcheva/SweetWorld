@model ProductImageViewModel
@{
    ViewBag.Title = "Add Image";
}

<div class="ps-page-contact">
    <div class="ps-hero bg--cover" data-background="img/hero/shop-hero.png">
        <div class="ps-hero__container">
            <div class="ps-breadcrumb">
                <ul class="breadcrumb">
                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li>Add Image</li>
                </ul>
            </div>
            <h1 class="ps-hero__heading">@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="ps-section ps-contact">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
                    <form method="post" enctype="multipart/form-data">
                        <div class="m-3">
                            <label for="picture" class="form-label">Upload image</label>
                            <input asp-for="Picture" accept="image/gif, image/jpeg, image/png, image/jpg" class="form-control" />
                            <span asp-validation-for="Picture" class="text-danger"></span>
                        </div>
                        <button class="ps-btn" type="submit"> Submit </button>
                    </form>

                    @if (ViewBag.ImageUrl != null)
                    {
                        <div class="mt-3">
                            <img src="@ViewBag.ImageUrl" alt="Uploaded Image" style="max-width: 50%; height: 50%;" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</div>